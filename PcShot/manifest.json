{
  "manifest_version": 2,

  "name": "PcShot Plugin",
  "description": "This extension will take the screenshot of the web page and you can view the screenshot by downloading PcShot android application.",
  "version": "1.0",
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/firebasejs/4.5.2/firebase.js https://www.gstatic.com/firebasejs/4.5.0/firebase-database.js https://www.gstatic.com/firebasejs/4.5.0/firebase-app.js https://*.firebaseio.com; object-src https://www.gstatic.com/firebasejs/*  'self'",
  "permissions": [
   "activeTab",
   "tabs",
   "<all_urls>"
   ]
}